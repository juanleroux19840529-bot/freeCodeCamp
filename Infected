
function infected(days) {
 let infectedComp = 1;
 
 for (let i  = 0; i < days; i++ ){

   infectedComp = infectedComp * 2; 
    
    if ((i+1) % 3 === 0){
      let patched = Math.ceil((infectedComp/100)*20);
      infectedComp -= patched;
      console.log(patched)
    } 
 }

  return infectedComp;
}

let nmbInfectedComp = infected(8)
console.log("Final infected computers:", nmbInfectedComp);
