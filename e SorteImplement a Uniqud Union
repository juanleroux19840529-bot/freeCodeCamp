function uniteUnique(...arrays){
  // I declare the answer variable in which I will return the result.
let answer = [];
// we will loop through the array of arrays and then with an innner loop loop through the inner arrays. 
for (let i = 0; i < arrays.length; i++){

  for (let x = 0; x < arrays[i].length; x++){
    //I create a variable that will hold the currrent value in the loop with with let not constent for the contents will change with each loop. 
  // array has two indexes [i] and [x].  [i] specifies the items in the  (arrays)  variable and [x] the items in the arrays  inside the arrays variable 
      let currentValue = arrays[i][x];
      //console.log(currentValue)
      // with this if statement I check that the item is not already included in the answer variable and if not I push the currentlvalue to the answer variable
      if(!answer.includes(currentValue)){
        answer.push(currentValue);
      }
    }
  
  }
return answer
}
uniteUnique([1, 3, 2], [5, 2, 1, 4], [2, 1])
