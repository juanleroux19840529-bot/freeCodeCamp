function getAverage( arrayOfScores){
let averageScore =  0 ;
let totalOfAllScores = 0;
  for (let i = 0; i< arrayOfScores.length; i++ ){
  totalOfAllScores += arrayOfScores[i]
  //console.log(totalOfAllScores)

}
averageScore = totalOfAllScores/arrayOfScores.length

return averageScore
}
//console.log(getAverage([92, 88, 12, 77, 57, 100, 67, 38, 97, 89]))

function getGrade(studentScore){
  if (studentScore === 100){
    return "A+";
  }else if (studentScore >=90 && studentScore <=99){
    return "A";
  }
  else if (studentScore >=80 && studentScore <=89){
    return "B";
  }else if (studentScore >=70 && studentScore <=79){
    return "C";
  }else if (studentScore >=60 && studentScore <=69){
    return "D";
  }else if (studentScore >=0 && studentScore <=59){
    return "F";
  }else return "The score is invalid"
}

function hasPassingGrade (grade){
  if (grade == "F"){
    return false;
  }else {
    return true;
    }
}

function studentMsg (arrayOfScores, studentScore){

const average = getAverage(arrayOfScores)
const grade = getGrade(studentScore)
const passed = hasPassingGrade (grade)


 if (passed){
 return `Class average: ${average}. Your grade: ${grade}. You passed the course.`;
}else
 return `Class average: ${average}. Your grade: ${grade}. You failed the course.`; 

}

console.log(studentMsg([92, 88, 12, 77, 57, 100, 67, 38, 97, 89], 77))   

;
