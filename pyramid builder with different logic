function pyramid(patternChar,rows,upsideDown){
let result ="\n"; //Start with a new line
// loop over each row

for (let i=1; i<=rows; i++){
  let numChars = 1 + (i-1)*2;
  let numSpaces = rows - i;

//if upsideDown reverse numbers
if (upsideDown){
 numChars = 1 + (rows -i) * 2;
 numSpaces = i -1
}
//ad spaces
let row = " ".repeat(numSpaces)
row += patternChar.repeat(numChars)
row += "\n"
result += row;
//console.log(result)
}
return result;

}


console.log(pyramid("o", 4, false));
